<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.AmodIt</groupId>
  <artifactId>Maven-app01</artifactId>
  <version>0.0.1-RELEASE</version>
  <name>First Example on Maven </name>
  <description>This is Standalone application </description>
  
  <dependencies>
	  <!-- https://mvnrepository.com/artifact/org.springframework/spring-context -->
		<dependency>
		    <groupId>org.springframework</groupId>
		    <artifactId>spring-context</artifactId>
		    <version>6.0.11</version>
		    <exclusions>
				<exclusion>
					<groupId>org.springframework</groupId>
		            <artifactId>spring-aop</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
		            <artifactId>spring-expression</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

  </dependencies>
  
  <build>
	  <!-- this tag will change the jar file name -->
	  <finalName>Maven-app</finalName>
  </build>
  
  
  
  
</project>
